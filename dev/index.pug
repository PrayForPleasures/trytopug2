extends layout/main

mixin navLink(link, name)
  li
    a(href=link).nav-link=name

block header
  .header
    .leftHead
      img(src='../imgs/Ellipse 1.png').logo-img
      p.p-logo ОптиМилк
    .rightHead
      ul.nav
        +navLink('#','Главная')
        +navLink('#','О компании')
        li
          a(href='#').nav-link='Компоненты'
            i.angle-down
            ul.nav
              +navLink('#', 'Закваски')
              +navLink('#', 'Ферменты')
              +navLink('#', 'Наполнители')
        li
          a(href='#').nav-link='Услуги'
            i.angle-down
            ul.nav
              +navLink('#', 'Разработка и освоение новых технологий ')
              +navLink('#', 'Разработка и актуализация документации (ТУ, ТИ, РЦ)')
              +navLink('#', 'Декларирование ингредиентов, упаковки для молочной промышленности')
        +navLink('#','Новости')
        +navLink('#','Контакты')
